CLASS_FLAGS += "inetd"

require conf/inetd.conf

IMAGE_PREPROCESS_FUNCS:>USE_inetd = " image_preprocess_inetd"

image_preprocess_inetd () {
	cwd=`pwd`
	test -d $cwd/${inetddir} || return 0
	for f in $cwd/${inetddir}/* ; do
		cat $f >> $cwd/${inetdconf}
		rm $f
	done
        rm -rf $cwd/${inetddir}
}
