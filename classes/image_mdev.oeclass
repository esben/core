CLASS_FLAGS += "busybox_mdev"

require conf/mdev.conf

IMAGE_PREPROCESS_FUNCS:>USE_busybox_mdev = " image_preprocess_mdev"

image_preprocess_mdev () {
	cwd=`pwd`
	test -d $cwd/${mdevdir} || return 0
	for f in $cwd/${mdevdir}/* ; do
		cat $f >> $cwd/${mdevconf}
		rm $f
	done
	rm -rf $cwd/${mdevdir}
}
