DEFAULT_USE_toolchain_kernel_version_machine	= "2.6.27.59"
DEFAULT_USE_toolchain_kernel_version_sdk	= "2.6.27.59"
DEFAULT_USE_toolchain_kernel_version_build	= "2.6.27.59"

DEFAULT_USE_toolchain_mingwrt_version		= "3.18"
DEFAULT_USE_toolchain_w32api_version		= "3.14"

DEFAULT_USE_toolchain_min_kernel_machine	= "2.6.27"
